## OpenAI
# Если используете официальный OpenAI endpoint — обычно достаточно OPENAI_API_KEY.
OPENAI_API_KEY=your_openai_api_key

# Опционально: base URL для прокси/совместимых API (оставьте пустым или удалите, если не нужно)
OPENAI_BASE_URL=https://api.proxyapi.ru/openai/v1

## Pinecone
PINECONE_API_KEY=your_pinecone_api_key
# Имя индекса в Pinecone (может быть создан автоматически кодом бота)
PINECONE_INDEX_NAME=telegram-bot-memory

## Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
